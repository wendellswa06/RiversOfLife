<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.example.android.riversoflife.MinistriesFragment">

    <!-- TODO: Update blank fragment layout -->
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">
        <ExpandableListView
            android:id="@+id/exp_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:indicatorStart="?android:attr/expandableListPreferredItemIndicatorLeft"
            android:divider="#d3d3d3"
            android:dividerHeight="0.5dp">
        </ExpandableListView>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#d3d3d3"
            android:layout_marginBottom="16dp">

        </TableRow>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/lightstock_31961_xsmall_matthew_"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/lightstock_149985_xsmall_matthew_"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/lightstock_9716_xsmall_matthew_"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"/>
    </LinearLayout>
</ScrollView>
</FrameLayout>
